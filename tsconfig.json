{
  "include": ["src"],
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["esnext"],
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "importHelpers": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
