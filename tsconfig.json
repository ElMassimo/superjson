{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": ["esnext"],
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
